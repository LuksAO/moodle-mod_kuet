<div class="content-control-panel">
    <div class="collapse show width" id="control-panel">
        <div class="teacher-control-panel" data-region="teacher_control_panel">
            <h5>{{#str}}controlpanel, mod_jqshow{{/str}}</h5>
            <div class="separator">
                <span>{{#str}}control, mod_jqshow{{/str}}</span>
                <div class="line-separator"></div>
            </div>
            <div class="control-action" data-action="next">
                <div class="control-action-icon bg-primary">
                    {{#pix}}i/next, mod_jqshow{{/pix}}
                </div>
                <span>{{#str}}next, mod_jqshow{{/str}}</span>
            </div>
            {{^ranking}}
                <div class="control-action" data-action="pause">
                    <div class="control-action-icon bg-primary">
                        {{#pix}}i/pause, mod_jqshow{{/pix}}
                    </div>
                    <span>{{#str}}pause, mod_jqshow{{/str}}</span>
                </div>
                <div class="control-action d-none" data-action="play">
                    <div class="control-action-icon bg-primary">
                        {{#pix}}i/play, mod_jqshow{{/pix}}
                    </div>
                    <span>{{#str}}play, mod_jqshow{{/str}}</span>
                </div>
            {{/ranking}}
            <div class="control-action" data-action="resend">
                <div class="control-action-icon bg-primary">
                    {{#pix}}i/resend, mod_jqshow{{/pix}}
                </div>
                <span>{{#str}}resend, mod_jqshow{{/str}}</span>
            </div>
            <div class="dropdown show">
                <div class="control-action dropdown-toggle" role="button" id="jumpTo" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="control-action-icon bg-primary">
                        {{#pix}}i/jump, mod_jqshow{{/pix}}
                    </div>
                    <span>{{#str}}jump, mod_jqshow{{/str}}</span>
                </div>
                <div class="dropdown-menu" aria-labelledby="jumpTo">
                    <div class="form-inline">
                        <div class="form-group ml-2 mr-2 mb-2">
                            <label for="jumpToNumber" class="sr-only">{{#str}}question_number, mod_jqshow{{/str}}</label>
                            <input type="number" class="form-control" id="jumpToNumber" data-input="jumpto" data-numquestions="{{numquestions}}" placeholder="{{#str}}question_number, mod_jqshow{{/str}}" min="1" max="{{numquestions}}">
                        </div>
                        <div data-action="jump" class="btn btn-primary mb-2 mr-2">{{#str}}jump, mod_jqshow{{/str}}</div>
                    </div>
                </div>
            </div>
            {{^ranking}}
                <div class="control-action" data-action="finishquestion">
                    <div class="control-action-icon bg-primary">
                        {{#pix}}i/close, mod_jqshow{{/pix}}
                    </div>
                    <span>{{#str}}finishquestion, mod_jqshow{{/str}}</span>
                </div>
            {{/ranking}}

            {{^ranking}}
                <div class="separator">
                    <span>{{#str}}showhide, mod_jqshow{{/str}}</span>
                    <div class="line-separator"></div>
                </div>
                <div class="showhide-action disabled" data-action="answers">
                    <div class="d-flex align-items-center">
                        <div class="showhide-action-icon">
                            {{#pix}}i/eye, mod_jqshow{{/pix}}
                        </div>
                        <span>{{#str}}responses, mod_jqshow{{/str}}</span>
                    </div>
                    <div class="custom-control custom-switch">
                        <input id="showhide_responses" type="checkbox"
                               data-action="showhide_responses"
                               class="custom-control-input"
                                >
                        <label for="showhide_responses" class="custom-control-label"
                               title="{{#str}}responses, mod_jqshow{{/str}}" >
                        </label>
                    </div>
                </div>
                <div class="showhide-action disabled" data-action="statistics">
                    <div class="d-flex align-items-center">
                        <div class="showhide-action-icon">
                            {{#pix}}i/statistics, mod_jqshow{{/pix}}
                        </div>
                        <span>{{#str}}statistics, mod_jqshow{{/str}}</span>
                    </div>
                    <div class="custom-control custom-switch">
                        <input id="showhide_statistics" type="checkbox"
                               data-action="showhide_statistics"
                               class="custom-control-input">
                        <label for="showhide_statistics" class="custom-control-label"
                               title="{{#str}}statistics, mod_jqshow{{/str}}" >
                        </label>
                    </div>
                </div>
                {{#showquestionfeedback}}
                    <div class="showhide-action disabled" data-action="feedback">
                        <div class="d-flex align-items-center">
                            <div class="showhide-action-icon">
                                {{#pix}}i/feedback, mod_jqshow{{/pix}}
                            </div>
                            <span>{{#str}}feedback, mod_jqshow{{/str}}</span>
                        </div>
                        <div class="custom-control custom-switch">
                            <input id="showhide_feedback" type="checkbox"
                                   data-action="showhide_feedback"
                                   class="custom-control-input"
                                    >
                            <label for="showhide_feedback" class="custom-control-label"
                                   title="{{#str}}feedback, mod_jqshow{{/str}}" >
                            </label>
                        </div>
                    </div>
                {{/showquestionfeedback}}
            {{/ranking}}

            <div class="separator">
                <span>{{#str}}questions, mod_jqshow{{/str}}</span>
                <div class="line-separator"></div>
            </div>
            <div class="control-action" data-action="improvise">
                <div class="control-action-icon bg-primary">
                    {{#pix}}i/improvise, mod_jqshow{{/pix}}
                </div>
                <span>{{#str}}improvise, mod_jqshow{{/str}}</span>
            </div>
            <div class="control-action" data-action="vote">
                <div class="control-action-icon bg-primary">
                    {{#pix}}i/vote, mod_jqshow{{/pix}}
                </div>
                <span>{{#str}}vote, mod_jqshow{{/str}}</span>
            </div>

            <div class="btn btn-primary endsession" data-action="endsession">
                {{#str}}end, mod_jqshow{{/str}}
            </div>
        </div>
    </div>
    <button role="button" class="btn teacher-control-panel-collapse" data-toggle="collapse" data-target="#control-panel">
        {{#pix}}i/collapse, mod_jqshow{{/pix}}
    </button>
</div>

{{#js}}
    require(['mod_jqshow/teachercontrolpanel'], function(ControlPanel) {
        ControlPanel.teacherControlPanel('[data-region="teacher_control_panel"]', {{jqid}});
    });
{{/js}}
